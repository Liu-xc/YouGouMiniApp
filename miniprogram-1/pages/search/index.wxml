<view class="search_row">
  <input value="{{inputValue}}" placeholder="请输入所要搜索的商品" bindinput="handleInput"></input>
  <button bindtap="handleCancle" hidden="{{!isFocus}}">取消</button>
</view>
<view class="search_content">
  <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}" class="search_item" wx:for="{{goods}}" wx:key="goods_id">
    {{item.goods_name}}
  </navigator>
</view>